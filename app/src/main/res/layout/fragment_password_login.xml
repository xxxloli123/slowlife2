<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <EditText
        android:id="@+id/phone_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:drawableBottom="@drawable/line"
        android:hint="请输入手机号"
        android:lines="1"
        android:maxLength="11"
        android:maxLines="1"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/password_edit"
        android:textColor="@color/black"
        android:textColorHint="#919191"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:background="@null"
            android:drawableBottom="@drawable/line"
            android:hint="密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:lines="1"
            android:longClickable="false"
            android:textColor="@color/black"
            android:textColorHint="#919191"
            android:textSize="14sp" />

        <com.android.slowlife.view.ShSwitchView
            xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
            android:id="@+id/switch_view"
            android:layout_width="60dip"
            android:layout_height="35dip"
            shSwitch:shadowSpace="7dip"
            shSwitch:tintColor="@color/red" />
    </LinearLayout>


    <Button
        android:id="@+id/fragment_login_bt"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_corners_bgall"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forget_register"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="注册账号"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/forget_passowrd_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="忘记密码？"
            android:textColor="@color/red"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>

