<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/test9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/time"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="用户455224***123"
                    android:textColor="@color/text_color"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                    <com.android.slowlife.view.RatingBar
                        xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        lxhRatingBar:canEdit="false"
                        lxhRatingBar:countSelected="1"
                        lxhRatingBar:dividerWidth="2dp"
                        lxhRatingBar:starCount="5"
                        lxhRatingBar:stateResId="@drawable/five_rating_bar2"
                        lxhRatingBar:widthAndHeight="10dp" />

                    <TextView
                        android:id="@+id/minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="30分钟送达"
                        android:textColor="@color/hint1_text_color"
                        android:textSize="11sp" />
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="2017-1-22 14:11"
                android:textColor="@color/hint1_text_color"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="商品还是不错的我很满意向往下次海恩那个和错"
        android:textColor="@color/hint1_text_color"
        android:textSize="11sp"
        android:layout_marginLeft="45dp" />
</LinearLayout>