<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/a4"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:text="Rumbu line石英表"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/product_image"
        android:ellipsize="end"
        android:lines="1" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name">
        <TextView
            android:id="@+id/special_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1"
            android:textSize="12sp"
            android:textColor="@color/red"/>
        <TextView
            android:id="@+id/original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥129"
            android:textColor="@color/hint_text_color"
            android:textSize="8sp"
            android:layout_toRightOf="@+id/special_offer"
            android:layout_alignBottom="@+id/special_offer" />
        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.8折"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_corners_bgall"
            android:layout_alignBottom="@+id/special_offer"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"/>
    </RelativeLayout>
</RelativeLayout>
