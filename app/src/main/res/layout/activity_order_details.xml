<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.android.slowlife.activity.OrderDetailsActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/red">

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:background="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none">

        <!--  订单评价前的header  -->
        <LinearLayout
            android:id="@+id/header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textColor="#000"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/order_btn_selector"
                    android:onClick="onClick"
                    android:text="付款"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/notify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_btn_selector"
                    android:onClick="onClick"
                    android:text="催单"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_btn_selector"
                    android:onClick="onClick"
                    android:text="联系快递员"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_btn_selector"
                    android:onClick="onClick"
                    android:text="取消订单"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_btn_red_selector"
                    android:onClick="onClick"
                    android:text="评价快递员"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!--  订单评价完成的header  -->
        <LinearLayout
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/user_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/call"
                    android:layout_toRightOf="@+id/user_head"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/courierName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.AppCompatRatingBar
                        android:id="@+id/starbar"
                        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:enabled="false"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/call"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/call"
                    android:onClick="onClick" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5px"
                    android:layout_gravity="center"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/anonymity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:text="匿名评价"
                    android:textColor="@color/line_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/evaluate_Starbar"
                style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/evaluate_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/red" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/line_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">


                <!--  内容体  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/logo_hd" />

                        <TextView
                            android:id="@+id/expresscompany"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img1"
                            android:maxLength="15"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/logisticsNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/expresscompany"
                            android:layout_toRightOf="@+id/img1"
                            android:ellipsize="marquee"
                            android:scrollHorizontally="true"
                            android:maxLines="1"
                            android:focusableInTouchMode="true"
                            android:focusable="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/expresscompany1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img1"
                            android:maxLength="15"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/expresscompanyphone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/expresscompany"
                            android:layout_toRightOf="@+id/img1"
                            android:maxLines="1"
                            android:autoLink="phone"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img1"
                            android:maxLength="15"
                            android:text="区外快递"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/isUrgent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="加急单"
                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!--  寄件人  -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="8dp"
                            android:text="寄\n件\n人" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView1"
                            android:layout_alignTop="@+id/textView1"
                            android:layout_marginLeft="2px"
                            android:layout_toRightOf="@+id/textView1"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:maxLength="10" />

                                <TextView
                                    android:id="@+id/userPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:autoLink="phone"
                                    android:maxLength="11"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/startAddr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="2" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!--  收件人  -->
                    <LinearLayout
                        android:id="@+id/recipients_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="8dp"
                            android:text="收\n件\n人" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/textView1"
                            android:layout_alignTop="@+id/textView1"
                            android:layout_marginLeft="2px"
                            android:layout_toRightOf="@+id/textView1"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/recipients"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:maxLength="10" />

                                <TextView
                                    android:id="@+id/recipientsPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:autoLink="phone"
                                    android:maxLength="11"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/endAddr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="2" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--  快递价格  -->
                    <TableLayout
                        android:id="@+id/price_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2px"
                        android:orientation="horizontal">

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="8dp"
                                android:text="快\n递\n价\n格" />

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2px"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:padding="8dp" />

                            <TextView
                                android:id="@+id/ordertype"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2px"
                                android:background="@color/white"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="加\n急\n费" />

                            <TextView
                                android:id="@+id/urgent_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2px"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:padding="8dp" />
                        </TableRow>

                        <!--  总价  -->
                        <TableRow
                            android:id="@+id/total_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2px"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="8dp"
                                android:text="总\n价"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2px"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:padding="8dp"
                                android:textColor="@color/red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2px"
                                android:background="@color/white"
                                android:padding="8dp"
                                android:text="重\n量"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/weight"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2px"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:padding="8dp"
                                android:textColor="@color/red" />
                        </TableRow>

                    </TableLayout>

                    <RelativeLayout
                        android:id="@+id/imageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginTop="2px"
                        android:background="@color/white"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <!--  订单信息  -->
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2px"
                        android:background="@color/white"
                        android:padding="8dp">

                        <TableRow android:padding="4dp">

                            <TextView
                                android:text="订单编号:"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/order_num"
                                android:layout_marginLeft="5dp"
                                android:scrollHorizontally="true"
                                android:focusableInTouchMode="true"
                                android:focusable="true"
                                android:maxLines="1" android:marqueeRepeatLimit="marquee_forever"
                                android:ellipsize="marquee"
                                android:textSize="12sp" />
                        </TableRow>

                        <TableRow android:padding="4dp">

                            <TextView
                                android:text="下单时间:"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/sTime"
                                android:layout_marginLeft="5dp"
                                android:textSize="12sp" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/gTime_layout"
                            android:padding="4dp">

                            <TextView
                                android:text="取件时间:"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/gTime"
                                android:layout_marginLeft="5dp"
                                android:textSize="12sp" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/require_layout"
                            android:padding="4dp">

                            <TextView
                                android:text="时效要求:"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/require"
                                android:layout_marginLeft="5dp"
                                android:textSize="12sp" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/consume_layout"
                            android:padding="4dp">

                            <TextView
                                android:text="取件耗时:"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/consume"
                                android:layout_marginLeft="5dp"
                                android:textSize="12sp" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/order_logo" />

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/order_details_round_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="预计送达"
            android:textSize="10sp" />
    </LinearLayout>
</FrameLayout>
