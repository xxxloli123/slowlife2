<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_icon_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/test9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/tv_time"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="用户455224***123"
                    android:textColor="@color/balance_problem_title"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <com.android.slowlife.view.RatingBar
                        xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/rate_appraise_score"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        lxhRatingBar:canEdit="false"
                        lxhRatingBar:countSelected="3"
                        lxhRatingBar:dividerWidth="1dp"
                        lxhRatingBar:starCount="5"
                        lxhRatingBar:stateResId="@drawable/five_rating_bar2"
                        lxhRatingBar:widthAndHeight="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="30分钟送达"
                        android:textColor="@color/balance_problem_title"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:text="2017-1-22 14:11"
                android:textColor="@color/balance_problem_title"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>