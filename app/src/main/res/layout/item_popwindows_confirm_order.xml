<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myradio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="今日（周四）"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="尽快送达|预计13:20"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/date"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/distribution_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(配送费3元)"
        android:textColor="@color/hint_text_color"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/time"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <com.android.slowlife.view.MyRadioButton
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            myradio:drawableBottom="@drawable/radio_selecter2"
            myradio:drawableSize="16dp"
            android:paddingRight="16dp" />
    </LinearLayout>
</RelativeLayout>
