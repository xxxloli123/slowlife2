<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <ImageView
        android:id="@+id/head_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/orders_cancel"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:text="123456789"/>
            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hint_text_color"
                android:textSize="12sp"
                android:text="2017-01-28 13:24"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <com.android.slowlife.view.RatingBar
            xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
            android:id="@+id/product_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            lxhRatingBar:canEdit="false"
            lxhRatingBar:countSelected="0"
            lxhRatingBar:dividerWidth="3dp"
            lxhRatingBar:starCount="5"
            lxhRatingBar:stateResId="@drawable/five_rating_bar2"
            lxhRatingBar:widthAndHeight="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/assist"/>
            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:horizontalSpacing="6dp"
                android:verticalSpacing="6dp"
                android:scrollbars="none"
                android:layout_marginLeft="6dp"
                android:drawSelectorOnTop="true">
            </GridView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
