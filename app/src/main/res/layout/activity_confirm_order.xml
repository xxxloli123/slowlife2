<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">
    <!--头部-->
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/red">

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:background="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
    <com.android.slowlife.view.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:layout_above="@+id/linearLayout3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">
            <!--收货人信息-->
            <RelativeLayout
                android:id="@+id/consignee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="13dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location3"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/image"
                    android:layout_marginLeft="6dp">
                    <TextView
                        android:id="@+id/name_phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/text_color"
                        android:text="收货人：某某某 12345678910"/>
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/hint_text_color"
                        android:text="收货地址：某某某 12345678910"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:lines="1"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:background="@color/line_color"/>
            <!--送达时间-->
            <RelativeLayout
                android:id="@+id/service_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/time"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送达时间"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/image1"
                    android:layout_marginLeft="6dp"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toLeftOf="@+id/image2"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp">
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="尽快送达 | 预计13:36"
                        android:textColor="@color/red"
                        android:textSize="10sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:background="@color/line_color"/>
            <!--进入商店-->
            <RelativeLayout
                android:id="@+id/business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/a5"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新世纪百货"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/image3"
                    android:layout_marginLeft="6dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_color"/>
            <com.android.slowlife.view.MyListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:divider="@color/line_color"
                android:dividerHeight="1dp"
                android:footerDividersEnabled="true"
                android:visibility="visible">
            </com.android.slowlife.view.MyListView>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:background="@color/line_color"/>
            <!--在店消费-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="在店消费"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:gravity="center_vertical"/>
                <com.android.slowlife.view.ShSwitchView
                    xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/switch_view"
                    android:layout_width="45dip"
                    android:layout_height="30dip"
                    shSwitch:tintColor="@color/green"
                    shSwitch:shadowSpace="7dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_color"/>
            <!--红包-->
            <RelativeLayout
                android:id="@+id/red_packet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红包"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/red_packet_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-￥10.0"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:layout_toLeftOf="@+id/image4"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_color"/>
            <!--代金券-->
            <RelativeLayout
                android:id="@+id/voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代金券"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/voucher_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无可用商家代金券"
                    android:textColor="@color/hint_text_color"
                    android:textSize="10sp"
                    android:layout_toLeftOf="@+id/image5"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_color"/>
            <!--配送费-->
            <RelativeLayout
                android:id="@+id/distribution_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送费"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/distribution_cost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥3"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:layout_toLeftOf="@+id/image6"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_color"/>
            <!--待支付-->
            <RelativeLayout
                android:id="@+id/to_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单￥3400"
                        android:textColor="@color/hint_text_color"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠￥10"
                        android:textColor="@color/hint_text_color"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/to_paid_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待支付 ￥3200"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:background="@color/line_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买家留言："
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/leaving_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:hint="请输入留言，例如用餐人数"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:textColorHint="@color/hint_text_color"
                    android:background="@drawable/hint_bgall"
                    android:padding="6dp"
                    android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>
    </com.android.slowlife.view.MyScrollview>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:background="#2c2c2c"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/to_paid_price1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="待支付￥3220"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" | "
                android:textSize="10sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/discount1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="优惠￥32"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:text="提交订单"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/red"/>
    </LinearLayout>
</RelativeLayout>
